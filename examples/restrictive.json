{
  "$schema": "https://agentpolicy.org/schema/v1/agent-policy.schema.json",
  "version": "1.0",
  "policyUrl": "https://secure.example.com/.well-known/agent-policy.json",
  "defaultPolicy": {
    "allow": false,
    "disallow": ["all"],
    "requireVerification": true
  },
  "pathPolicies": [
    {
      "path": "/",
      "allow": true,
      "actions": ["read"],
      "requireVerification": true,
      "rateLimit": {
        "requests": 10,
        "window": "hour"
      }
    },
    {
      "path": "/robots.txt",
      "allow": true,
      "actions": ["read"],
      "requireVerification": false
    },
    {
      "path": "/.well-known/agent-policy.json",
      "allow": true,
      "actions": ["read"],
      "requireVerification": false
    },
    {
      "path": "/public/about",
      "allow": true,
      "actions": ["read"],
      "requireVerification": true,
      "rateLimit": {
        "requests": 5,
        "window": "hour"
      }
    }
  ],
  "verification": {
    "method": ["verifiable-credential"],
    "registry": "https://registry.agentpolicy.org",
    "trustedIssuers": [
      "did:web:trust.agentpolicy.org"
    ],
    "verificationEndpoint": "https://secure.example.com/agent-verify"
  },
  "contact": {
    "email": "security@secure.example.com",
    "abuseUrl": "https://secure.example.com/report-abuse"
  },
  "metadata": {
    "description": "Highly restrictive policy: deny all by default, only allow read on root and about page with strict verification. Suitable for sensitive corporate sites.",
    "owner": "Example Security Corp",
    "lastModified": "2026-02-14T00:00:00Z",
    "license": "Apache-2.0"
  }
}
